<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Messanger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aqua_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.Body">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">800</item>
    </style>

    <style name="TextAppearance.AppCompat.ButtonText">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Button.BlackButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.ButtonText</item>
        <item name="android:textColor">#F2F5F5F5</item>
    </style>

    <style name="TextAppearance.AppCompat.AuthenticationEditText">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ThemeOverlay.Material3.TextInputEditText.AuthenticationEditText">
        <item name="android:background">@drawable/ic_auth_background_edit_text</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.AuthenticationEditText</item>
    </style>

    <style name="TextAppearance.AppCompat.AuthenticationHeadingTextView">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.AppCompat.AuthenticationTextView">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton.ResendButton">
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>

    <style name="TextAppearance.AppCompat.AccountSettingsToolbarTitle">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.AppCompat.ToolbarSubtitle">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.AppCompat.ChatMessage">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">18sp</item>
        <item name="android:textFontWeight">500</item>
    </style>
</resources>